<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _0611_2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_0611_2.styles.css" asp-append-version="true" />
    <style>
        /* Container for navigation links and side buttons with light gray background */
        .nav-and-buttons-container {
            background-color: #f0f0f0; /* Light gray background */
            padding: 0; /* Remove padding */
            position: relative; /* Ensure correct stacking context */
        }

        /* Ensure the side buttons container extends from the top to bottom */
        .nav-and-buttons-container::after {
            content: '';
            display: block;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #f0f0f0;
            z-index: -1; /* Place it behind other content */
        }

        /* Styling for the side buttons area */
        .side-buttons {
            position: fixed;
            top: 60px; /* Adjust to place below the navbar */
            width: 60px;
            z-index: 1000; /* Ensure it stays above main content */
            background-color: #f0f0f0; /* Light gray background */
            padding: 10px 0; /* Vertical padding for spacing */
        }
        .side-buttons.left {
            left: 0;
        }
        .side-buttons.right {
            right: 0;
        }
        .side-buttons a {
            display: block;
            margin: 5px 0; /* Adjust for spacing between icons */
            background-color: #f0f0f0; /* Light gray background */
            padding: 5px; /* Add some padding for better appearance */
            border-radius: 4px; /* Rounded corners for a better look */
        }
        .side-buttons img {
            width: 100%;
            height: auto;
        }
        /* Styling for the navbar */
        .navbar {
            background-color: #f0f0f0; /* Light gray background */
        }
        .dropdown-menu {
            background-color: #f0f0f0; /* Light gray background for dropdown */
        }
        .dropdown-item {
            color: #333; /* Darker text color for better contrast */
        }
        .dropdown-item:hover {
            background-color: #e0e0e0; /* Slightly darker gray on hover */
        }
        /* Ensure the main content does not overlap with side buttons */
        .main-content {
            background-color: #fff; /* Main content background color */
            min-height: 100vh; /* Ensure it extends to the bottom of the viewport */
            padding: 20px; /* Add padding to ensure content does not touch edges */
        }
        footer {
            background-color: #f0f0f0; /* Light gray background for the footer */
        }
    </style>
</head>
<body>
    <header>
        <div class="nav-and-buttons-container">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse d-sm-inline-flex justify-content-between collapse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="doctorDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    醫師
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="doctorDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="DoctorId" asp-action="Index">醫師列表</a></li>
                                    <!-- Add more doctor-related links if needed -->
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="customerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    顧客
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="customerDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Customers" asp-action="Index">顧客列表</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Appointments" asp-action="Index">客人預約</a></li>
                                    <!-- Add more customer-related links if needed -->
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="equipmentDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    器材
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="equipmentDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Equipment" asp-action="Index">器材列表</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="EquipmentUsage" asp-action="Index">器材使用率</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="EquipmentStatus" asp-action="Index">器材是否使用</a></li>
                                    <!-- Add more equipment-related links if needed -->
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="scheduleDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    排班
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="scheduleDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Schedules" asp-action="Index">排班列表</a></li>
                                    <!-- Add more schedule-related links if needed -->
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="scheduleTableDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    總表
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="scheduleTableDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="SchedulesTable" asp-action="Index">總表列表</a></li>
                                    <!-- Add more schedule table-related links if needed -->
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Left side buttons -->
            <div class="side-buttons left">
                <a asp-area="" asp-controller="DoctorId" asp-action="Index">
                    <img src="~/images/doctor-icon.png" alt="醫師">
                </a>
                <a asp-area="" asp-controller="Customers" asp-action="Index">
                    <img src="~/images/customer-icon.png" alt="顧客">
                </a>
            </div>
            <!-- Right side buttons -->
            <div class="side-buttons right">
                <a asp-area="" asp-controller="Schedules" asp-action="Index">
                    <img src="~/images/schedule-icon.png" alt="排班">
                </a>
                <a asp-area="" asp-controller="SchedulesTable" asp-action="Index">
                    <img src="~/images/table-icon.png" alt="總表">
                </a>
            </div>
        </div>
    </header>
    <div class="container main-content">
        <div class="row">
            <div class="col">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - _0611_2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
