@model _0611_2.Models.Appointment
@{
    ViewData["Title"] = "Appointment";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="//unpkg.com/layui@2.9.10/dist/css/layui.css" rel="stylesheet">
    <style>
        body {
            height: 70%;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            background-color: white;
            color: black;
        }

        h2 {
            color: black;
            padding: 40px;
        }

        .table-container {
            margin: 0 auto;
            padding: 0 20px;
            text-align: left;
        }

        .layui-table {
            border-style: none;
            border-color: #16baaa;
            background-color: white;
            width: 100%;
        }

        .form-container {
            width: 100%;
        }

        .btn-container {
            text-align: center;
            margin-top: 20px;
        }

        .layui-btn a {
            color: white;
        }
    </style>
</head>
<body>
    <div class="table-container">
        <h2>預約時間資料</h2>
        <form method="post" action="@Url.Action("MakeAppointment", "SchedulesTable")" class="form-container">
            <input type="hidden" name="doctorId" value="@Model.Schedule.DoctorId" />
            <input type="hidden" name="date" value="@Model.Schedule.Date.ToString("yyyy-MM-dd")" />
            <input type="hidden" name="timeSlot" value="@Model.Schedule.TimeSlot" />
            <table class="layui-table" lay-skin="line">
                <tr>
                    <td>醫生ID</td>
                    <td>@Model.Schedule.DoctorId</td>
                </tr>
                <tr>
                    <td>日期</td>
                    <td>@Model.Schedule.Date.ToString("yyyy-MM-dd")</td>
                </tr>
                <tr>
                    <td>時段</td>
                    <td>@Model.Schedule.TimeSlot</td>
                </tr>
                <tr>
                    <td>選擇客戶</td>
                    <td>
                        <select name="customerId" class="layui-select">
                            @foreach (var customer in Model.Customers)
                            {
                                <option value="@customer.CustomerId">@customer.CustomerName</option>
                            }
                        </select>
                    </td>
                </tr>
            </table>
            <div class="btn-container">
                <button type="submit" class="layui-btn">預約</button>
                <button type="button" class="layui-btn">
                    <a href="@Url.Action("Index", "SchedulesTable")">取消</a>
                </button>
            </div>
        </form>
    </div>
</body>
</html>
